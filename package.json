{
  "name": "dnd-roll-tables",
  "version": "1.0.4",
  "description": "Configuration and metadata for the DnD Roll Tables application. Includes dependencies, build scripts, and Electron packaging settings.",
  "main": "main.js",
  "author": "Richard Phillips",
  "license": "GPL-3.0",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.example.dndrolltables",
    "productName": "DnD Roll Tables",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "json/",
        "to": "json/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "semver": "^7.7.1"
  }
}
